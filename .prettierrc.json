{
	"arrowParens": "avoid",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"htmlWhitespaceSensitivity": "ignore",
	"insertPragma": false,
	"jsxSingleQuote": false,
	"overrides": [
		{
			"files": [
				"*.json"
			],
			"options": {
				"parser": "json",
				"printWidth": 0
			}
		},
		{
			"files": [
				"*.yml",
				"*.yaml"
			],
			"options": {
				"printWidth": 10000,
				"tabWidth": 2,
				"useTabs": false
			}
		}
	],
	"printWidth": 120,
	"proseWrap": "always",
	"quoteProps": "preserve",
	"requirePragma": false,
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"vueIndentScriptAndStyle": true
}
